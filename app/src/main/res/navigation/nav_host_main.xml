<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_host_main"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.shoesstore.view.fragment.HomeFragment"
        android:label="محصولات"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_shoeDetailFragment"
            app:destination="@id/shoeDetailFragment"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />

        <action
            android:id="@+id/action_homeFragment_to_cartFragment"
            app:destination="@id/cartFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/shoeDetailFragment"
        android:name="com.example.shoesstore.view.fragment.ShoeDetailFragment"
        android:label="محصولات"
        tools:layout="@layout/fragment_shoe_detail">
        <argument
            android:name="shoeId"
            app:argType="integer" />
        <action
            android:id="@+id/action_shoeDetailFragment_to_cartFragment"
            app:destination="@id/cartFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/cartFragment"
        android:name="com.example.shoesstore.view.fragment.CartFragment"
        android:label="سبد خرید"
        tools:layout="@layout/fragment_cart">

        <action
            android:id="@+id/action_cartFragment_to_shoeDetailFragment"
            app:destination="@id/shoeDetailFragment"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/favoritesFragment"
        android:name="com.example.shoesstore.view.fragment.FavoritesFragment"
        android:label="علاقه‌مندی‌ها"
        tools:layout="@layout/fragment_favorites">
        <action
            android:id="@+id/action_favoritesFragment_to_shoeDetailFragment"
            app:destination="@id/shoeDetailFragment"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>


</navigation>